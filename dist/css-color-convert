#!/bin/sh
# Save the current directory
original_dir=$(pwd)
# Change to the script's directory
cd "$(dirname "$0")" || exit
 
if [ "$#" -lt 2 ]; then
  echo "Usage: $0 <output dir> <css dir> [options]"
  exit 1
fi

node index.js "$original_dir/$1" "$original_dir/$2" "${@:3}"
# Return to the original directory
cd "$original_dir" || exit